page {
  background-color: #edece8;
}
.userinfo_wrap {
  position: relative;
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
}
.userinfo_wrap .userimg_wrap {
  position: relative;
}
.userinfo_wrap .userimg_wrap .backimg {
  width: 100%;
  height: 50vh;
  filter: blur(10rpx);
}
.userinfo_wrap .userimg_wrap .userinfo {
  position: absolute;
  left: 50%;
  top: 20%;
  transform: translate(-50%);
}
.userinfo_wrap .userimg_wrap .userinfo .user_pic {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.userinfo_wrap .userimg_wrap .userinfo .user_nickname {
  color: #ffffff;
  margin-top: 50rpx;
  font-weight: 600;
}
.userinfo_wrap .gologin_wrap {
  position: absolute;
  left: 50%;
  top: 30%;
  transform: translate(-50%);
}
.userinfo_wrap .gologin_wrap .gologin {
  color: yellowgreen;
  border: 1px solid currentColor;
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 20rpx;
  text-align: center;
  width: 200rpx;
}
.user_content {
  position: relative;
}
.user_content .user_main {
  width: 90%;
  position: absolute;
  left: 50%;
  top: -40rpx;
  transform: translate(-50%);
  padding-bottom: 100rpx;
}
.user_content .user_main .history_wrap {
  padding: 15rpx;
  background: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  color: #666;
}
.user_content .user_main .history_wrap navigator {
  flex: 1;
}
.user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.user_content .user_main .myorder_wrap {
  margin-top: 15rpx;
  background: #ffffff;
}
.user_content .user_main .myorder_wrap .order_top {
  padding: 15rpx;
  border-bottom: 1px solid #ccc;
}
.user_content .user_main .myorder_wrap .order_top .ordertxt {
  color: #666;
}
.user_content .user_main .myorder_wrap .order_bottom {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 15rpx;
}
.user_content .user_main .myorder_wrap .order_bottom navigator {
  flex: 1;
}
.user_content .user_main .myorder_wrap .order_bottom navigator .iconfont {
  color: var(--themeColor);
}
.user_content .user_main .myorder_wrap .order_bottom navigator .orderstatus {
  margin-top: 10rpx;
  color: #666;
}
.user_content .user_main .address_wrap {
  margin-top: 15rpx;
  background: #ffffff;
  padding: 15rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.user_content .user_main .allinfo_wrap {
  margin-top: 15rpx;
  background: #ffffff;
  padding: 15rpx;
  color: #666;
}
.user_content .user_main .allinfo_wrap navigator {
  padding: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ccc;
}
.user_content .user_main .allinfo_wrap .about {
  border: none;
}
.user_content .user_main .share_wrap {
  margin-top: 15rpx;
  background: #ffffff;
  padding: 15rpx;
  color: #666;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.user_content .user_main .share_wrap button {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}
