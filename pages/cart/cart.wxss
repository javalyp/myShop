page {
  padding-bottom: 90rpx;
}
.top_address {
  padding: 15rpx 0;
}
.top_address .btn_getAddress {
  font-weight: 500;
}
.top_address .receive_info {
  padding: 20rpx;
}
.top_address .receive_info .info_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.cartCon .carttxt {
  font-size: 36rpx;
  display: flex;
  align-items: center;
  color: var(--themeColor);
  border-top: 1px solid currentColor;
  border-bottom: 1px solid currentColor;
  padding: 20rpx;
}
.cartCon .goodinfo {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
  border-bottom: 1px solid #ccc;
}
.cartCon .goodinfo .check_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cartCon .goodinfo .img_wrap {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 2;
}
.cartCon .goodinfo .img_wrap image {
  width: 80%;
}
.cartCon .goodinfo .info_wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cartCon .goodinfo .info_wrap .good_name_wrap .goodname {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cartCon .goodinfo .info_wrap .good_price_wrap {
  display: flex;
  justify-content: space-between;
  padding-top: 40rpx;
}
.cartCon .goodinfo .info_wrap .good_price_wrap .goodprice {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cartCon .goodinfo .info_wrap .good_price_wrap .cart_num_tool {
  display: flex;
}
.cartCon .goodinfo .info_wrap .good_price_wrap .cart_num_tool .num_edit {
  border: 1px solid #ccc;
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cartCon .goodinfo .info_wrap .good_price_wrap .cart_num_tool .goodnum {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cartCon .cart_none {
  width: 100%;
  padding: 355rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.cartCon .cart_none .none_txt {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  margin-bottom: 20rpx;
}
.cartCon .cart_none .none_navigate {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
  border: 1px solid currentColor;
  border-radius: 20rpx;
  color: var(--themeColor);
}
.bottom_settlement {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  border-top: 1px solid #ccc;
  background: #fff;
}
.bottom_settlement .allCheck_wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.bottom_settlement .allCheck_wrap .allchecktxt {
  font-size: 28rpx;
}
.bottom_settlement .totalPrice_wrap {
  flex: 3;
  text-align: right;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.bottom_settlement .totalPrice_wrap .pricetxt {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.bottom_settlement .totalPrice_wrap .includeyf {
  font-size: 28rpx;
}
.bottom_settlement .buy_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  background: var(--themeColor);
  color: #fff;
  font-weight: 600;
  font-size: 32rpx;
}
